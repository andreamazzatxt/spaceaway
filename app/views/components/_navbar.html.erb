        <% else %>
          <div class="dropdown">
              <a class="dropdown-toggle arrow" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= render "./components/avatar" %>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
