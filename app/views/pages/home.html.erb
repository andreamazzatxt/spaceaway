<div class="viewport-header">
  <h1>Spaceaway</h1>
  <br>
  <a href="#home-trips" class="btn btn-primary">All Trips</a>
</div>

<!-- grid trip section -->

<section id="home-trips">
  <div class="container trips-container">

    <div class="row">
    <% @trips.each do |trip| %>
        <div class="col">
        <%= link_to trip_path(trip) do %>
          <div class="card">
            <%= cl_image_tag trip.captain.photo.key, class: 'avatar',id: 'absolute-avatar', height: 40, width: 40, crop: :fill %>
            <div class="image">
              <%= cl_image_tag trip.photo.key, height: 300, width: 335, crop: :fill %>
            </div>
            <div class="card-info">
              <h5><%= trip.name %></h5>
              <p class="trip-paragraph"> <%= trip.description %></p>
            </div>
          </div>
        <% end %>
        </div>
        <% end %>
    </div>
  </div>
</section>


























