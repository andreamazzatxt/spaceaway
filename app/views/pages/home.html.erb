
  <video src="https://d1titnu6se1qmv.cloudfront.net/uploads/2019/04/home-vbg.mp4" autoplay loop playsinline muted></video>
<div class="viewport-header" id="home-top">
  <h1>Spaceaway</h1>
  <br>
  <%= form_tag root_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control search-bar",
    placeholder: "Find Your Galaxy Trip"
  %>

<% end %>
  <a href="#home-trips" class="btn br btn-primary">All Trips</a>
</div>

<!-- search bar section -->




<!-- grid trip section -->

<section id="home-trips">
  <div class="container pt-3">

    <div class="row">
    <% @trips.each do |trip| %>
        <div class="col">
        <%= link_to trip_path(trip) do %>
          <div class="card">
            <%= cl_image_tag trip.captain.photo.key, class: 'avatar',id: 'absolute-avatar', height: 40, width: 40, crop: :fill %>
            <div class="image">
              <%= cl_image_tag trip.photo.key, height: 300, width: 335, crop: :fill %>
            </div>
            <div class="card-info">
              <h5 class="trip-title"><%= trip.name %></h5>
              <p class="trip-paragraph"> <%= trip.description %></p>
            </div>
          </div>
        <% end %>
        </div>
        <% end %>
    </div>
  </div>
</section>


























